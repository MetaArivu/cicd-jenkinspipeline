pipeline {
    agent any
     environment {
    PATH = "/usr/local/bin/:$PATH"
    HOME="/var/root/.jenkins"

  }
    stages {
       stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'git@github.com:MetaArivu/cicd-jenkinspipeline.git',
                    credentialsId: 'mygithubssh'
            }
            }

        stage('Build') {
            steps {
                echo 'Build the App'
                echo "PATH is: $PATH"
                sh 'npm i'
                sh 'ng build --prod'
            }
        }
        stage('Test1') {
            steps {
                echo 'Test the App'
                sh 'ls -ltr'
            }
        }     
        
        stage('Staging') {
            steps {
                echo 'Deploy the App in Staging'
                echo "HOME is: $HOME"
                sh 'git add docs'
                sh 'git commit -m "docs"'
                sshagent(credentials : ['mygithubssh']) {               
                    sh 'git push -f origin HEAD:main'
                }

            }
        }
    }
}
