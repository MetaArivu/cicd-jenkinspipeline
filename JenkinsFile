pipeline {
    agent any
     environment {
    PATH = "/usr/local/bin/:$PATH"
    HOME="/var/root/.jenkins"

  }
    stages {
        stage('Build') {
            steps {
                echo 'Build the App'
                echo "PATH is: $PATH"
                sh 'npm i'
                sh 'ng build --prod'
            }
        }
        stage('Test1') {
            steps {
                echo 'Test the App'
                sh 'cp -rf Docs/HelloM/* docs/'
            }
        }   
        stage('Staging') {
            steps {
               sshagent(credentials : ['mygithubssh']) {
                echo 'Deploy the App in Staging'
                echo "HOME is: $HOME"
                sh 'git add .'
                sh 'git commit -m "docs"'
                sh 'git ls-remote -h --refs git@github.com:meta-magic/pipelineyesy.git main | git push HEAD:main' 
                }

            }
        }
    }
}
