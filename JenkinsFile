pipeline {
    agent any
     environment {
    PATH = "/usr/local/bin/:$PATH"
    HOME="/var/root/.jenkins"

  }
    stages {
        stage('Build') {
            steps {
                echo 'Build the App'
                echo "PATH is: $PATH"
                sh 'npm i'
                sh 'ng build --prod'
            }
        }
        stage('Test1') {
            steps {
                echo 'Test the App'
                sh 'cp -rf Docs/HelloM/* docs/'
            }
        }   
        stage('Staging') {
            steps {
                echo 'Deploy the App in Staging'
                echo "HOME is: $HOME"
                sh 'git config --global credential.helper cache'
                sh 'git config --global push.default simple'
                sh 'git config --global user.email "deepali.arvind@metamagic.in"'
                sh 'git config --global user.name "deepali-arvind"'
                sh 'git add .'
                sh 'git commit -m "docs"'
                sh 'git push origin HEAD:main'

            }
        }
    }
}
