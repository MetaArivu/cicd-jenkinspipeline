pipeline {
    agent any
     environment {
    PATH = "/usr/local/bin/:$PATH"
    HOME="/var/root/.jenkins"

  }
    stages {
        stage('Build') {
            steps {
                echo 'Build the App'
                echo "PATH is: $PATH"
                sh 'npm i'
                sh 'ng build --prod'
            }
        }
        stage('Test1') {
            steps {
                echo 'Test the App'
                sh 'cp -rf Docs/HelloM/* docs/'
            }
        }   
        stage('Staging') {
            steps {
               sshagent(credentials : ['7388cc2c-2890-4309-a147-b91eba2fcde4']) {
                echo 'Deploy the App in Staging'
                echo "HOME is: $HOME"
                sh 'git add .'
                sh 'git commit -m "docs"'
                sh 'git push origin HEAD:main'
                }

            }
        }
    }
}
