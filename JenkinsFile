pipeline {
    agent any
    tools { nodejs "nodejs" }  
    stages {
        stage('Build') {
            steps {
                echo 'Build the App'
                sh 'node -v'
                sh 'npm i'
                sh 'ng build --prod'
            }
        }
        stage('Test1') {
            steps {
                echo 'Test the App'
            }
        }   
        stage('Staging') {
            steps {
                echo 'Deploy the App in Staging'

            }
        }
    }
}
