pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Build the App'
                npm i
                ng build 
            }
        }
        stage('Test') {
            steps {
                echo 'Test the App'
                ng serve
            }
        }   
        stage('Staging') {
            steps {
                echo 'Deploy the App in Staging'
                git init
                git add .
                git commit -m "build successful"
                git remote add origin https://github.com/meta-magic/pipelinetest.git                                      
                git push -u origin main
            }
        }
    }
}
