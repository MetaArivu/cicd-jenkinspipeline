pipeline {
    agent any
     environment {
    PATH = "/usr/local/bin/:$PATH"
    HOME="/var/root/.jenkins"

  }
    stages {
       stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'git@github.com:meta-magic/pipelinetest.git',
                    credentialsId: '869d28a2-4afd-4ae8-bb61-4fc0f2c8dd4a'
            }

        stage('Build') {
            steps {
                echo 'Build the App'
                echo "PATH is: $PATH"
                sh 'npm i'
                sh 'ng build --prod'
            }
        }
        stage('Test1') {
            steps {
                echo 'Test the App'
                sh 'cp -rf Docs/HelloM/* docs/'
            }
        }     
        
        stage('Staging') {
            steps {
                echo 'Deploy the App in Staging'
                echo "HOME is: $HOME"
                sh 'git add .'
                sh 'git commit -m "docs"'
                sshagent(credentials : ['869d28a2-4afd-4ae8-bb61-4fc0f2c8dd4a']) {               
                    sh 'git push -f origin HEAD:main'
                }

            }
        }
    }
}
