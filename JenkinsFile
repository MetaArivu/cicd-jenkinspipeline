pipeline {
    agent any
     environment {
    PATH = "/usr/local/bin/:$PATH"
    HOME="/var/root/.jenkins"

  }
    stages {
       stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'git@github.com:MetaArivu/cicd-jenkinspipeline.git',
                    credentialsId: 'mygithubssh'
            }
            }
             
        stage('Build') {
            steps {
                echo 'Build the App'
                echo "PATH is: $PATH"
                sh 'npm i'
                sh 'ng build --prod'
            }
        }
        stage('Test1') {
            steps {
                echo 'Test the App'
                sh 'ls -ltr'
                sh 'rm -rf docs/HelloM/*'
                sh 'cp -rf /private/var/root/.jenkins/workspace/node-pipeline/dist/HelloM/* docs/HelloM/'

            }
        }     
        
        stage('Staging') {
              steps {

                echo 'Deploy the App in Staging'
                echo "HOME is: $HOME"
                sh 'git add docs'
                sh 'git commit -m "docs"'
                sshagent(credentials : ['mygithubssh']) {               
                    sh 'git push -f origin HEAD:main'
                }

            }
        }
          

        stage('deployUAT') {
        input{message "Do you want to proceed for uat deployment?" }  
              steps {
                echo 'Deploy the App in uat'
                echo "HOME is: $HOME"
                sh 'mkdir docs/uat/'
                sh 'cp -rf /private/var/root/.jenkins/workspace/node-pipeline/dist/HelloM/* docs/uat/'
                sh 'git add docs'
                sh 'git commit -m "docs"'
                sshagent(credentials : ['mygithubssh']) {               
                    sh 'git push -f origin HEAD:main'
                }

            }
        }
        
        
        stage('deployPROD') {
        input{message "Do you want to proceed for prod deployment?" }  
              steps {
                echo 'Deploy the App in uat'
                echo "HOME is: $HOME"
                sh 'mkdir docs/prod/'
                sh 'cp -rf /private/var/root/.jenkins/workspace/node-pipeline/docs/HelloM/* docs/prod/'
                sh 'git add docs'
                sh 'git commit -m "docs"'
                sshagent(credentials : ['mygithubssh']) {               
                    sh 'git push -f origin HEAD:main'
                }

            }
        } 
            
    }
}
