pipeline {
    agent any
     environment {
    PATH = "/usr/local/bin/:$PATH"
  }
    stages {
        stage('Build') {
            steps {
                echo 'Build the App'
                echo "PATH is: $PATH"
                sh 'node -v'
                sh 'npm i'
                sh 'ng build --prod'
            }
        }
        stage('Test1') {
            steps {
                echo 'Test the App'
                sh 'ls -ltr'
            }
        }   
        stage('Staging') {
            steps {
                echo 'Deploy the App in Staging'

            }
        }
    }
}
